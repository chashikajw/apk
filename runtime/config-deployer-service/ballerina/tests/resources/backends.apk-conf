---
name: "test-cors"
basePath: "/test_cors"
version: "2.0.0"
type: "REST"
endpointConfigurations:
    production:
      endpoint: "https://backend-prod-test/v1/"
    sandbox:
      endpoint:
        name: http-bin-backend
        namespace: apk-test
        port: 7676
        protocol: http
operations:
    - target: "/anything"
      verb: "GET"
      secured: true
      scopes: ["admin", "reader"]
    - target: "/post_cat"
      verb: "POST"
      secured: true
      scopes: ["admin", "publisher"]
      endpointConfigurations:
        production:
          endpoint: "https://backend-prod-post-cat/v2/"
rateLimit:
  requestsPerUnit: 5
  unit: Minute
